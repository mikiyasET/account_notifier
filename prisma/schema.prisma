generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model alert {
  id        Int         @id @default(autoincrement())
  type      Role
  chatId    String
  status    alertStatus
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum Role {
  user
  channel
  group
}

enum alertStatus {
  on
  off
}
